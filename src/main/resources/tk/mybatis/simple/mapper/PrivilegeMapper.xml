<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tk.mybatis.simple.mapper.PrivilegeMapper">

	<resultMap id="privilegeMap" type="SysPrivilege">
		<id property="id" column="id"/>
		<result property="privilegeName" column="privilege_name"/>
		<result property="privilegeUri" column="privilege_uri"/>
	</resultMap>
	
	<select id="selectAllCopy3" resultType="SysPrivilege">
		select * from sys_privilege
	</select>
	
	<select id="selectByRoleId" resultMap="privilegeMap">
		select 
			p.id,
			p.privilege_name,
			p.privilege_uri
		from sys_privilege p
		inner join sys_role_privilege rp on p.id = rp.privilege_id
		where rp.role_id = #{roleId}
	</select>
		
</mapper>